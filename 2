const resultsText = {
  A: "### ğŸ ä½ æ˜¯ï¼šé¦¬å‹äººæ ¼...ï¼ˆæ­¤è™•çœç•¥å…¨æ–‡ï¼Œä¿ç•™åŸå…§å®¹ï¼‰",
  B: "### ğŸ¦Š ä½ æ˜¯ï¼šç‹ç‹¸å‹äººæ ¼...",
  C: "### ğŸ‘¦ ä½ æ˜¯ï¼šç”·å­©å‹äººæ ¼...",
  D: "### ğŸ¾ ä½ æ˜¯ï¼šé¼´é¼ å‹äººæ ¼..."
};

let current = 0;
let answers = [];

function renderQuestion() {
  const q = questions[current];
  const container = document.getElementById('quiz-container');
  
  container.innerHTML = `
    <div>
      <h3 class="text-xl font-semibold mb-4">ç¬¬ ${current+1} é¡Œï¼š${q.q}</h3>
      <div class="space-y-3">
        ${q.options.map((opt,i)=>`
          <label class='block p-3 border rounded cursor-pointer hover:bg-blue-50'>
            <input type='radio' name='q${current}' value='${opt[0]}' class='mr-2'>${opt}
          </label>`).join('')}
      </div>
    </div>`;

  document.getElementById("prevBtn").classList.toggle("hidden", current === 0);
  document.getElementById("nextBtn").innerText = current === questions.length - 1 ? "æäº¤" : "ä¸‹ä¸€é¡Œ";
}

function calculateResult() {
  const count = {A:0,B:0,C:0,D:0};
  answers.forEach(a => count[a]++);

  let final = Object.keys(count).sort((a,b)=>count[b]-count[a])[0];

  document.getElementById('result').innerHTML = `
    <h3 class='text-2xl font-bold mb-4'>ä½ çš„çµæœ</h3>
    <p class='whitespace-pre-line'>${resultsText[final]}</p>`;

  document.getElementById('quiz-container').classList.add('hidden');
  document.getElementById('prevBtn').classList.add('hidden');
  document.getElementById('nextBtn').classList.add('hidden');
  document.getElementById('result').classList.remove('hidden');
}

// ä¸‹ä¸€é¡ŒæŒ‰éˆ•
nextBtn.onclick = () => {
  const selected = document.querySelector(`input[name='q${current}']:checked`);
  if (!selected) return alert("è«‹å…ˆé¸æ“‡ä¸€å€‹é¸é …");

  answers[current] = selected.value;

  if (current === questions.length - 1) return calculateResult();

  current++;
  renderQuestion();
};

// ä¸Šä¸€é¡ŒæŒ‰éˆ•
prevBtn.onclick = () => {
  current--;
  renderQuestion();
};

renderQuestion();
